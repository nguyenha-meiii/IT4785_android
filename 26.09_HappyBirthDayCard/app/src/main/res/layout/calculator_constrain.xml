<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView 3: Displays "Life Cycle" text -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:paddingLeft="10dp"
        android:text="Life Cycle"
        android:textColor="#D3C2C2"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView: Displays the result (like "0") -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#BDB5B5"
        android:gravity="right"
        android:paddingTop="30dp"
        android:paddingEnd="25dp"
        android:paddingBottom="30dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <Button
        android:id="@+id/button_ce"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="CE"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_c"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="C"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_ce"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_bs"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="BS"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_c"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_div"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="/"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_bs"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Second row: 7, 8, 9, X -->
    <Button
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="7"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_ce"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintTop_toBottomOf="@id/button_c"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="9"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintTop_toBottomOf="@id/button_bs"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_mul"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="X"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintTop_toBottomOf="@id/button_div"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Third row: 4, 5, 6, - -->
    <Button
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="6"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintTop_toBottomOf="@id/button_mul"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Fourth row: 1, 2, 3, + -->
    <Button
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="3"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="+"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintTop_toBottomOf="@id/button_sub"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Fifth row: +/-, 0, ., = -->
    <Button
        android:id="@+id/button_sign"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="+/-"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:backgroundTint="#eeeeee"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_sign"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="."
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/button_eq"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="="
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_dot"
        app:layout_constraintTop_toBottomOf="@id/button_add"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
